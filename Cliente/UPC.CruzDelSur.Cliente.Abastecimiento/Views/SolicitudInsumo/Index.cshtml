@{
    ViewBag.Title = "Buscar Solicitud de Insumo";
}

<h2>Buscar Solicitud de Insumo</h2>

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
        <div class="panel panel-default">
            <div class="panel-heading">Criterios de Búsqueda</div>
            <div class="panel-body">
                @using (Html.BeginRouteForm("Solicitud_Insumo", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="solicitud_insumo_id">Nro. Solicitud Insumo</label>
                        <input type="number" class="form-control" placeholder="Nro. Solicitud Insumo" name="solicitud_insumo_id" id="solicitud_insumo_id" />
                    </div>
                    <div class="form-group">
                        <label for="solicitud_insumo_fecha_inicial">Fecha Inicial</label>
                        <input type="date" class="form-control" placeholder="Fecha Inicial" name="solicitud_insumo_fecha_inicial" id="solicitud_insumo_fecha_inicial" />
                    </div>
                    <div class="form-group">
                        <label for="solicitud_insumo_fecha_final">Fecha Final</label>
                        <input type="date" class="form-control" placeholder="Fecha Final" name="solicitud_insumo_fecha_final" id="solicitud_insumo_fecha_final" />
                    </div>
                    if (ViewBag.ErrorParameters != null    )
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.ErrorParameters
                        </div>
                    }
                    <div class="form-group">
                        <label> </label>
                        <button class="btn btn-success btn-block"><i class="fa fa-search"></i> Buscar</button>
                    </div>
                     
                }
            </div>
        </div>
        
    </div>
    <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
        <div class="panel panel-default">
            <div class="panel-heading">Información</div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Fecha de Solicitud</th>
                        <th>Solicitud de Insumo</th>
                        <th>Solicitud de Cocina</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.ListadoSolicitudesInsumo != null)
                    {
                        foreach (var item in ViewBag.ListadoSolicitudesInsumo)
                        {
                            <tr>
                                <td>@item.FechaSolicitud</td>
                                <td>@item.Id</td>
                                <td>@item.SolicitudCocina.Id</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>